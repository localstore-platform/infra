# LocalStore Platform - Infrastructure Environment Variables
# Copy this file to .env and update values
# NEVER commit .env to version control

# ======================
# AWS Configuration
# ======================
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# ======================
# Terraform Configuration
# ======================
TF_VAR_environment=dev
TF_VAR_instance_type=t2.small
TF_VAR_key_name=localstore-key
TF_VAR_admin_ip=YOUR_IP/32

# ======================
# Database Configuration
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=localstore
DB_USER=localstore
DB_PASSWORD=change_this_password

# ======================
# Redis Configuration
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_password

# ======================
# Application Configuration
# ======================
NODE_ENV=development
API_PORT=3000
JWT_SECRET=change_this_to_a_64_char_random_string

# ======================
# Domain Configuration
# ======================
DOMAIN_NAME=quanly.ai
API_VERSION=latest
AI_VERSION=latest

# ======================
# SSL Configuration
# ======================
SSL_EMAIL=admin@yourdomain.com

# ======================
# Monitoring (Optional)
# ======================
# GRAFANA_ADMIN_PASSWORD=
# PROMETHEUS_RETENTION=15d
